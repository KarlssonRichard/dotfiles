set nocompatible 
filetype off  
filetype plugin on

syntax on
set number
set tabstop=4
set shiftwidth=4
set backspace=2

set laststatus=0
set nobackup
set nowritebackup
set noswapfile
set termguicolors
set background=dark
set term=screen-256color
colorscheme lucius

" neovim path - ~/.config/nvim/init.vim
" path to colorschemes /home/{USER}/.config/nvim/colors
" xsel - for copy/paste with x11
" https://github.com/jonathanfilip/vim-lucius
